<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.AddItemActivity">

    <EditText
        android:id="@+id/activity_add_item_field_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:inputType="textCapWords"
        android:hint="@string/name"
        />

    <EditText
        android:id="@+id/activity_add_item_field_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:inputType="numberDecimal"
        android:hint="@string/price"
        />

    <EditText
        android:id="@+id/activity_add_item_field_quantity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:inputType="number"
        android:hint="@string/quantity"
        />

    <Button
        android:id="@+id/activity_add_item_button_clear"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/clear"
        />

    <Button
        android:id="@+id/activity_add_item_button_save"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="@string/save"
        />

</LinearLayout>